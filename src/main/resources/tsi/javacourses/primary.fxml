<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tsi.javacourses.PrimaryController">
   <top>
      <HBox alignment="CENTER">
         <Spinner fx:id="num1" initialValue="0" min="0" max="9" prefWidth="65" editable="true" />
         <Spinner fx:id="num2" initialValue="0" min="0" max="9" prefWidth="65" editable="true" />
         <Spinner fx:id="num3" initialValue="0" min="0" max="9" prefWidth="65" editable="true" />
         <Spinner fx:id="num4" initialValue="0" min="0" max="9" prefWidth="65" editable="true" />
         <Button text="Go!" onAction="#doTurn" />
      </HBox>
   </top>
   <center>
      <TableView fx:id="turnsTable">
         <columns>

            <TableColumn text="Nr.">
               <cellValueFactory>
                  <PropertyValueFactory property="nr" />
               </cellValueFactory>
            </TableColumn>

            <TableColumn text="Guess">
               <cellValueFactory>
                  <PropertyValueFactory property="guess" />
               </cellValueFactory>
            </TableColumn>

            <TableColumn text="Bulls">
               <cellValueFactory>
                  <PropertyValueFactory property="bulls" />
               </cellValueFactory>
            </TableColumn>

            <TableColumn text="Cows">
               <cellValueFactory>
                  <PropertyValueFactory property="cows" />
               </cellValueFactory>
            </TableColumn>

         </columns>
      </TableView>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
